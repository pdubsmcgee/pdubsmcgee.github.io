---
interface Props {
  heading?: string;
}

const { heading = 'Approved Customer Portal' } = Astro.props;
const securePortalUrl = import.meta.env.PUBLIC_SECURE_PORTAL_URL ?? '';
---

<section class="section-shell">
  <div class="card">
    <p class="text-xs uppercase tracking-[0.2em] text-brand-100">Private Area</p>
    <h1 class="mt-3 text-3xl font-semibold text-white">{heading}</h1>
    <p class="mt-3 text-slate-300">This area has moved behind our secure customer portal.</p>
    {
      securePortalUrl ? (
        <a href={securePortalUrl} class="mt-6 inline-block rounded-md bg-brand-500 px-4 py-2 font-semibold text-white hover:bg-brand-700">Continue to Secure Portal</a>
      ) : (
        <p class="mt-6 text-sm text-slate-400">Secure portal link is not configured. Please contact your account manager.</p>
      )
    }
    <div class="mt-8">
      <slot />
    </div>
  </div>
</section>
