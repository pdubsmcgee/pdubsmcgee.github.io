---
import { companyInfo } from '../config/company';
---
<footer class="border-t border-slate-800 bg-slate-950">
  <div class="mx-auto flex max-w-6xl flex-col gap-2 px-4 py-8 text-sm text-slate-400 sm:px-6 lg:px-8">
    <p class="font-medium text-slate-200">{companyInfo.name}</p>
    <p>{companyInfo.address}</p>
    <p>
      <a href={`tel:${companyInfo.phoneHref}`} class="text-brand-200 hover:text-brand-100">{companyInfo.phoneDisplay}</a>
      {' · '}
      <a href={`mailto:${companyInfo.generalEmail}`} class="text-brand-200 hover:text-brand-100">{companyInfo.generalEmail}</a>
    </p>
    <p>© {new Date().getFullYear()} {companyInfo.name}. All rights reserved.</p>
  </div>
</footer>
