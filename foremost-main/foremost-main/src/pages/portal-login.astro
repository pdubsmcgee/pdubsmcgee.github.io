---
import BaseLayout from '../layouts/BaseLayout.astro';

const securePortalUrl = import.meta.env.PUBLIC_SECURE_PORTAL_URL ?? '';
---
<BaseLayout title="Portal Access | Foremost Machine, Inc.">
  <section class="section-shell">
    <div class="card mx-auto max-w-lg space-y-4">
      <h1 class="text-3xl font-semibold text-white">Portal Access</h1>
      <p class="text-slate-300">For security reasons, portal authentication is handled in our secure customer system rather than on this public website.</p>
      {
        securePortalUrl ? (
          <a href={securePortalUrl} class="inline-block rounded-md bg-brand-500 px-5 py-2 font-semibold text-white hover:bg-brand-700">Open Secure Portal</a>
        ) : (
          <p class="rounded-md border border-amber-400/50 bg-amber-900/20 px-3 py-2 text-sm text-amber-200">Secure portal link is not configured yet. Contact sales for access.</p>
        )
      }
      <p class="text-xs text-slate-400">Need access? Submit a commercial request through the Request Access form.</p>
    </div>
  </section>
</BaseLayout>
