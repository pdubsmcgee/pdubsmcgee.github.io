---
import BaseLayout from '../layouts/BaseLayout.astro';
import { companyInfo } from '../config/company';
---
<BaseLayout title="Contact | Foremost Machine, Inc.">
  <section class="section-shell">
    <h1 class="text-4xl font-bold text-white">Contact</h1>
    <p class="mt-3 max-w-3xl text-slate-300">For account and purchasing inquiries, please submit a request through our Request Access page.</p>

    <div class="card mt-8 max-w-2xl space-y-5">
      <div>
        <h2 class="text-xl font-semibold text-white">{companyInfo.name}</h2>
        <p class="mt-1 text-slate-300">{companyInfo.tagline}</p>
      </div>

      <div class="space-y-3 text-slate-200">
        <p><span class="font-semibold text-white">Address:</span> {companyInfo.address}</p>
        <p><span class="font-semibold text-white">Phone:</span> <a href={`tel:${companyInfo.phoneHref}`} class="text-brand-300 hover:text-brand-200">{companyInfo.phoneDisplay}</a></p>
        <p><span class="font-semibold text-white">General Email:</span> <a href={`mailto:${companyInfo.generalEmail}`} class="text-brand-300 hover:text-brand-200">{companyInfo.generalEmail}</a></p>
        <p><span class="font-semibold text-white">Hours:</span> {companyInfo.hours}</p>
      </div>

      <a href="/request-access" class="inline-block rounded-md bg-brand-500 px-5 py-3 font-semibold text-white hover:bg-brand-400">Go to Request Access</a>
    </div>
  </section>
</BaseLayout>
