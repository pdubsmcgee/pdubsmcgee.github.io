---
import BaseLayout from '../layouts/BaseLayout.astro';
---
<BaseLayout title="Message Sent | Foremost Machine, Inc.">
  <section class="section-shell">
    <div class="card max-w-2xl">
      <h1 class="text-3xl font-semibold text-white">Thanks for contacting us.</h1>
      <p class="mt-3 text-slate-300">Your message was submitted. Our team will follow up shortly.</p>
      <a href="/" class="mt-6 inline-block rounded-md bg-brand-500 px-4 py-2 font-semibold text-white">Return Home</a>
    </div>
  </section>
</BaseLayout>
